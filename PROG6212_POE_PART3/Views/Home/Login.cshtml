@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="
    display:flex;
    flex-direction:column;
    justify-content:center;
    align-items:center;
    min-height:90vh;
    background: linear-gradient(135deg, #DFFFD7, #B6EFC7);
    padding:50px;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;">

    <h2 style="
        color:#3E5F44;
        font-weight:bold;
        font-size:2.2rem;
        margin-bottom:35px;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.2);">
        Login
    </h2>

    @if (ViewBag.Error != null)
    {
        <p style="
                    color:red;
                    margin-bottom:25px;
                    font-weight:bold;
                    text-shadow: 1px 1px 2px rgba(0,0,0,0.2);">
            @ViewBag.Error
        </p>
    }

    <form method="post" asp-action="Login" asp-controller="Home"
          style="
            width:100%;
            max-width:400px;
            display:flex;
            flex-direction:column;
            align-items:center;
            background:#ffffff;
            padding:35px 30px;
            border-radius:20px;
            box-shadow: 0 10px 20px rgba(0,0,0,0.2), 0 6px 6px rgba(0,0,0,0.15);
            transition: transform 0.3s ease, box-shadow 0.3s ease;"
          onmouseover="this.style.transform='translateY(-5px)'; this.style.boxShadow='0 15px 30px rgba(0,0,0,0.25), 0 10px 10px rgba(0,0,0,0.2)';"
          onmouseout="this.style.transform='translateY(0)'; this.style.boxShadow='0 10px 20px rgba(0,0,0,0.2), 0 6px 6px rgba(0,0,0,0.15)';">

        <!-- Role dropdown -->
        <div style="width:100%; margin-bottom:20px;">
            <select name="role" required
                    style="
                        width:100%;
                        padding:14px 18px;
                        border-radius:12px;
                        border:1px solid #5E936C;
                        font-size:1rem;
                        box-shadow: inset 0 3px 6px rgba(0,0,0,0.1);
                        transition: all 0.3s ease;"
                    onfocus="this.style.borderColor='#3E5F44'; this.style.boxShadow='0 0 8px rgba(62,95,68,0.4) inset';"
                    onblur="this.style.borderColor='#5E936C'; this.style.boxShadow='inset 0 3px 6px rgba(0,0,0,0.1)';">
                <option value="" disabled selected>Select Role</option>
                <option value="Lecturer">Lecturer</option>
                <option value="Coordinator">Programme Coordinator</option>
                <option value="Manager">Academic Manager</option>
                <option value="HR">HR</option>
            </select>
        </div>

        <!-- Username -->
        <div style="width:100%; margin-bottom:20px;">
            <input type="text" name="username" placeholder="Username" required
                   style="
                        width:100%;
                        padding:14px 18px;
                        border-radius:12px;
                        border:1px solid #5E936C;
                        font-size:1rem;
                        box-shadow: inset 0 3px 6px rgba(0,0,0,0.1);
                        transition: all 0.3s ease;"
                   onfocus="this.style.borderColor='#3E5F44'; this.style.boxShadow='0 0 8px rgba(62,95,68,0.4) inset';"
                   onblur="this.style.borderColor='#5E936C'; this.style.boxShadow='inset 0 3px 6px rgba(0,0,0,0.1)';" />
        </div>

        <!-- Password -->
        <div style="width:100%; margin-bottom:30px;">
            <input type="password" name="password" placeholder="Password" required
                   style="
                        width:100%;
                        padding:14px 18px;
                        border-radius:12px;
                        border:1px solid #5E936C;
                        font-size:1rem;
                        box-shadow: inset 0 3px 6px rgba(0,0,0,0.1);
                        transition: all 0.3s ease;"
                   onfocus="this.style.borderColor='#3E5F44'; this.style.boxShadow='0 0 8px rgba(62,95,68,0.4) inset';"
                   onblur="this.style.borderColor='#5E936C'; this.style.boxShadow='inset 0 3px 6px rgba(0,0,0,0.1)';" />
        </div>

        <!-- Submit -->
        <button type="submit"
                style="
                    width:100%;
                    padding:14px;
                    border-radius:30px;
                    border:none;
                    font-weight:bold;
                    font-size:1.1rem;
                    cursor:pointer;
                    background: linear-gradient(145deg, #93DA97, #3E5F44);
                    color:#fff;
                    box-shadow: 0 6px 12px rgba(0,0,0,0.2);
                    transition: all 0.3s ease;"
                onmouseover="this.style.transform='translateY(-3px)'; this.style.boxShadow='0 8px 18px rgba(0,0,0,0.25)';"
                onmouseout="this.style.transform='translateY(0)'; this.style.boxShadow='0 6px 12px rgba(0,0,0,0.2)';">
            Login
        </button>
    </form>
</div>
