@model List<PROG6212_POE_PART3.Models.Claim>

@{
    ViewData["Title"] = "Approved Claims";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="green-container">
    <h2 class="green-title">Approved Claims</h2>

    <a href="/HR/Index" class="back-btn">← Back to HR Dashboard</a>

    <table class="green-table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Lecturer</th>
                <th>Hours</th>
                <th>Amount (R)</th>
                <th>Status</th>
                <th>Date Submitted</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var c in Model)
            {
                <tr>
                    <td>@c.Id</td>
                    <td>@c.LecturerName</td>
                    <td>@c.HoursWorked</td>
                    <td>@c.StoredClaimAmount</td>
                    <td>@c.Status</td>
                    <td>@c.DateSubmitted.ToString("dd/MM/yyyy")</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>

    .green-container {
        padding: 40px;
        background: #E8FFD7;
        min-height: 85vh;
        max-width: 1200px;
        margin: auto;
        border-radius: 14px;
        box-shadow: 0 6px 15px rgba(0,0,0,0.15);
    }

    .green-title {
        color: #3E5F44;
        font-size: 2rem;
        text-align: center;
        margin-bottom: 10px;
    }

    .back-btn {
        background: #3E5F44;
        color: white;
        padding: 10px 20px;
        border-radius: 20px;
        text-decoration: none;
        font-weight: bold;
        display: inline-block;
        margin-bottom: 20px;
        transition: 0.3s;
    }

        .back-btn:hover {
            background: #2f4d36;
            transform: translateY(-3px);
        }

    .green-table {
        width: 100%;
        border-collapse: collapse;
        background: white;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 5px 15px rgba(0,0,0,0.15);
    }

        .green-table th {
            background: #3E5F44;
            color: white;
            padding: 12px;
        }

        .green-table td {
            padding: 12px;
            border-bottom: 1px solid #eee;
            color: #333;
        }

        .green-table tr:hover {
            background: #F1FBEF;
        }
</style>
