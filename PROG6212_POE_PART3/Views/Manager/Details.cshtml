@model PROG6212_POE_PART3.Models.Claim

@{
    ViewData["Title"] = "Claim Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="padding:50px; max-width:800px; margin:auto; background:#F1F8F1; border-radius:16px; box-shadow:0 6px 18px rgba(0,0,0,0.1); font-family:'Segoe UI', sans-serif;">
    <h2 style="color:#2B4F2B; font-size:2rem; margin-bottom:25px; text-align:center;">
        Claim Details - ID @Model.Id
    </h2>

    <div style="display:flex; flex-direction:column; gap:18px;">
        <div>
            <strong>Lecturer Name:</strong>
            <span>@Model.LecturerName</span>
        </div>
        <div>
            <strong>Hours Worked:</strong>
            <span>@Model.HoursWorked</span>
        </div>
        <div>
            <strong>Hourly Rate:</strong>
            <span>R @Model.HourlyRate</span>
        </div>
        <div>
            <strong>Total Claim Amount:</strong>
            <span>R @Model.ClaimAmount</span>
        </div>
        <div>
            <strong>Notes:</strong>
            <span>@Model.Notes</span>
        </div>
        <div>
            <strong>Status:</strong>
            <span>@Model.Status</span>
        </div>
        <div>
            <strong>Date Submitted:</strong>
            <span>@Model.DateSubmitted.ToString("yyyy-MM-dd HH:mm")</span>
        </div>
        <div>
            <strong>Supporting Document:</strong>
            @if (!string.IsNullOrEmpty(Model.SupportingDocument))
            {
                <div style="margin-top:5px;">
                    <a asp-controller="Lecturer" asp-action="OpenDocument"
                       asp-route-id="@Model.Id" target="_blank"
                       style="color:#3E5F44; text-decoration:underline; font-weight:bold;">
                        @Model.OriginalFileName
                    </a>
                </div>
            }
            else
            {
                <span style="color:#888;">N/A</span>
            }
        </div>
    </div>

    <div style="margin-top:35px; text-align:center;">
        <a asp-controller="Manager" asp-action="ManagerDashboard"
           style="background:#93DA97; color:#2B4F2B; padding:12px 30px; border-radius:25px; text-decoration:none; font-weight:bold; box-shadow:0 4px 10px rgba(0,0,0,0.15); transition: all 0.3s ease;"
           onmouseover="this.style.backgroundColor='#5E936C'; this.style.color='#F1F8F1'; this.style.transform='translateY(-2px)'; this.style.boxShadow='0 6px 12px rgba(0,0,0,0.2)';"
           onmouseout="this.style.backgroundColor='#93DA97'; this.style.color='#2B4F2B'; this.style.transform='translateY(0)'; this.style.boxShadow='0 4px 10px rgba(0,0,0,0.15)';">
            Back to Dashboard
        </a>
    </div>
</div>
